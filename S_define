/************************************************************
PURPOSE:
    ( A sample trick model created using only cpp. ModelX. )
LIBRARY DEPENDENCIES:
    ((ModelX.cpp))
*************************************************************/

#define TRICK_NO_MONTE_CARLO
#define TRICK_NO_MASTERSLAVE
#define TRICK_NO_INSTRUMENTATION
#define TRICK_NO_REALTIMEINJECTOR
#define TRICK_NO_ZEROCONF

#include "sim_objects/default_trick_sys.sm"

##include "modelX/ModelX.hpp"

class ModelXSimObject : public Trick::SimObject {
    public:
    ModelX modelX;

    ModelXSimObject() {
        ("default_data")     modelX.default_data() ;
        ("initialization")   modelX.init() ;
        (1.0 , "scheduled")  modelX.scheduled() ;
        ("shutdown")         modelX.shutdown() ;
    }
};

ModelXSimObject dyn;