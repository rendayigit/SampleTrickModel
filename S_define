##include "root/root.hpp"

class RootSimObject : public Trick::SimObject {
    public:

    RootSimObject() {
        ("default_data")     Root::getInstance().default_data() ;
        ("initialization")   Root::getInstance().init() ;
        (1.0 , "scheduled")  Root::getInstance().scheduled() ;
        ("shutdown")         Root::getInstance().shutdown() ;
    }
};

