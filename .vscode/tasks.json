{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Unit Tests",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": [
                "chmod -R 777 ./scripts/;",
                "./tests/scripts/clean.sh;", // TODO: Remove to speed up building
                "./scripts/build.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests/"
            },
            "problemMatcher": "$gcc",
            "runOptions": {"reevaluateOnRerun": false},
        },
        {
            "label": "Clean All",
            "type": "shell",
            "group": "build",
            "command": [
                "chmod -R 777 ./tests/scripts/;",
                "./tests/scripts/clean.sh;",
                "make spotless"
            ],
            "options": {
                "cwd": "${workspaceFolder}/"
            },
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "group": "test",
            "command": [
                "chmod -R 777 ./tests/scripts/;",
                "./scripts/run.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "runOptions": {"reevaluateOnRerun": false},
        },
        {
            "label": "Generate Coverage",
            "type": "shell",
            "group": "test",
            "command": [
                "chmod -R 777 ./tests/scripts/;",
                "./scripts/coverage.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "runOptions": {"reevaluateOnRerun": false},
        },
    ]
}